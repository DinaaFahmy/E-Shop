@model CreateProductRequest
@{ 
    ViewBag.Title = "Create Product";
}
    <form class="form-horizontal" asp-action="Create" asp-controller="Products" method="post">
        <div class="form-group">
            <label asp-for="CategoryId" class="col-sm-2"></label>
            <div class="col-sm-5">
                <input type="text" asp-for="CategoryId" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="CategoryId"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2"></label>
            <div class="col-sm-5">
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-sm-2"></label>
            <div class="col-sm-5">
                <input type="text" asp-for="Description" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Description"></span>
            </div>
        </div>
          <div class="form-group">
            <label asp-for="Price" class="col-sm-2"></label>
            <div class="col-sm-5">
                <input type="number" asp-for="Price" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Price"></span>
            </div>
        </div>
         <div class="form-group">
            <label asp-for="DiscountPercentage" class="col-sm-2"></label>
            <div class="col-sm-5">
                <input type="number" asp-for="DiscountPercentage" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="DiscountPercentage"></span>
            </div>
        </div>
         <div class="form-group">
            <label asp-for="PriceForTwoPieces" class="col-sm-2"></label>
            <div class="col-sm-5">
                <input type="number" asp-for="PriceForTwoPieces" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="PriceForTwoPieces"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </div>
    </form>

