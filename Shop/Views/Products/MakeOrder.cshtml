@model CreateOrderRequest
@{
    ViewBag.Title = "Place Order";
    ProductResponse product = ViewBag.product;
}
    <form class="form-horizontal" asp-action="MakeOrder" asp-controller="Products" method="post">
         <div class="form-group">
                <input type="number" hidden asp-for="ProductId" class="form-control" />
        </div>
         <div class="form-group">
            <label asp-for="Quantity" class="col-sm-2"><b>@product.Name</b></label>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="col-sm-2"></label>
            <div class="col-sm-5">
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </div>
    </form>